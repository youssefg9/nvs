<scene version="2.1.0">

<!-- Defaults, these can be set via the command line: -Darg=value -->

	<default name="spp" value="4096"/>
	<default name="resx" value="1920"/>
	<default name="resy" value="1080"/>

<!-- Camera and Rendering Parameters -->

	<integrator type="path" id="elm__0" name="elm__0">
		<integer name="max_depth" value="12"/>
	</integrator>
	<sensor type="perspective" id="Camera" name="Camera">
		<string name="fov_axis" value="x"/>
		<float name="fov" value="98.405015"/>
		<float name="principal_point_offset_x" value="0.000000"/>
		<float name="principal_point_offset_y" value="-0.000000"/>
		<float name="near_clip" value="0.100000"/>
		<float name="far_clip" value="1000.000000"/>
		<transform name="to_world">
			<rotate x="1" angle="126.39994523311952"/>
			<rotate y="1" angle="2.9035309538628896e-05"/>
			<rotate z="1" angle="-174.00003899293696"/>
			<translate value="1.287047 -5.899893 3.536810"/>
		</transform>
		<sampler type="independent" name="sampler">
			<integer name="sample_count" value="$spp"/>
		</sampler>
		<film type="hdrfilm" name="film">
			<integer name="width" value="$resx"/>
			<integer name="height" value="$resy"/>
		</film>
	</sensor>

<!-- Materials -->

	<bsdf type="twosided" id="mat-itu_concrete" name="mat-itu_concrete">
		<bsdf type="diffuse" name="bsdf">
			<rgb value="0.500000 0.500000 0.500000" name="reflectance"/>
		</bsdf>
	</bsdf>
	<bsdf type="twosided" id="mat-itu_brick" name="mat-itu_brick">
		<bsdf type="diffuse" name="bsdf">
			<rgb value="0.603815 0.090312 0.050031" name="reflectance"/>
		</bsdf>
	</bsdf>

<!-- Emitters -->

	<emitter type="constant" id="World" name="World">
		<rgb value="1.000000 1.000000 1.000000" name="radiance"/>
	</emitter>

<!-- Shapes -->

	<shape type="ply" id="mesh-wall" name="mesh-wall">
		<string name="filename" value="meshes/wall.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-itu_brick" name="bsdf"/>
	</shape>
	<shape type="ply" id="mesh-floor" name="mesh-floor">
		<string name="filename" value="meshes/floor.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-itu_concrete" name="bsdf"/>
	</shape>
	<shape type="ply" id="mesh-wall2" name="mesh-wall2">
		<string name="filename" value="meshes/wall2.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-itu_brick" name="bsdf"/>
	</shape>

<!-- Volumes -->

</scene>
